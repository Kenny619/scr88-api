generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum language {
 JP 
 EN
}

model Scrapers {
  id                Int      @id @default(autoincrement())
  name              String   @db.VarChar(255)
  rootUrl           String   @db.VarChar(3000)
  entryUrl          String   @db.VarChar(3000)
  language          String   @db.VarChar(2) @map("language")
  @@map("Scrapers")
  siteType          String   @db.VarChar(10) @map("siteType")
  nextPageType      String   @db.VarChar(15) @map("nextPageType")
  lastUrlSelector  String?  @db.VarChar(255)
  lastPageNumberRegExp String? @db.VarChar(255)
  nextPageParameter String?  @db.VarChar(255)
  nextPageLinkSelector String? @db.VarChar(255)
  nextPageUrlRegExp String?  @db.VarChar(255)
  tagFiltering     Boolean  @default(false)
  tagCollect       Boolean  @default(true)
  tags             String?  @db.VarChar(255)
  indexLinkSelector String?  @db.VarChar(255)
  articleBlockSelector String? @db.VarChar(255)
  articleTitleSelector String   @db.VarChar(255)
  articleBodySelector String   @db.VarChar(255)
  articleTagSelector String?  @db.VarChar(255)
  frequency        String   @db.VarChar(6) @map("frequency")
  status           String   @db.VarChar(9) @map("status")
  lastRun          DateTime? @db.Timestamp
  nextRunScheduled DateTime? @db.Timestamp
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}